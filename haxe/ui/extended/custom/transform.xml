<vbox>
    <hbox id="pos" text="position">
        <label text="x"/>
        <numberstepper id="px" pos="0.0" step="0.1" />
        <label text="y"/>
        <numberstepper id="py" pos="0.0" step="0.1" />
        <label text="z"/>
        <numberstepper id="pz" pos="0.0" step="0.1" />
    </hbox>
    <hbox id="rot" text="rotation">
        <label text="x"/>
        <numberstepper id="rx" pos="0.0" />
        <label text="y"/>
        <numberstepper id="ry" pos="0.0" />
        <label text="z"/>
        <numberstepper id="rz" pos="0.0" />
    </hbox>
    <hbox id="scale" text="scale">
        <label text="x"/>
        <numberstepper id="sx" pos="0.0" step="0.1" />
        <label text="y"/>
        <numberstepper id="sy" pos="0.0" step="0.1" />
        <label text="z"/>
        <numberstepper id="sz" pos="0.0" step="0.1" />
    </hbox>
</vbox>